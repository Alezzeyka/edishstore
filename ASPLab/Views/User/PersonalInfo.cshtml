@using ASPLab.Data.Models
@model ASPLab.Data.ViewModels.UserOrderViewModel
<body>
    <div class="row" style="margin-top:3.5%">
        <div class="col-lg-2" style="width:20%">
            <b>Почта:</b><p>@Model.user.Email</p>
            <b>Логин:</b><p>@Model.user.Login</p>
            <b>Имя:</b><p>@Model.user.Name</p>
            <b>Тел.:</b><p>@Model.user.PhoneNumber</p>
            @Html.ActionLink("Изменить данные", "Edit", "User", null, new { @class = "btn btn-success" })
            @Html.ActionLink("Удалить учетную запись", "Delete", "User", null, new { @class = "btn btn-danger" })
        </div>
        <div class="col-lg-2" style="width:80%">
            <h2>Ваши заказы</h2>
            @{
                if (Model.listUserOrderDetails != null)
                {
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>ID</th>
                                <th>Дата</th>
                                <th>Сумма</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UserOrderDetails item in Model.listUserOrderDetails)
                            {
                                <tr><td style="width:75px">@Html.ActionLink("Подробнее", "Info", "Order", null, new { @class = "btn btn-info" })</td><td>@item.OrderId</td><td>@item.orderDate</td><td>@item.orderSum</td></tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h3>У вас еще нет заказов</h3>
                }
            }
        </div>
    </div>
</body>